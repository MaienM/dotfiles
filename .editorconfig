root = true

[*]
indent_style = tab
tab_width = 3

[*.lua]
quote_style = single
call_parentheses = NoSingleTable

[*.nix]
indent_style = space
tab_width = 2
indent_size = 2

[flake.lock]
indent_style = space
tab_width = 2
indent_size = 2

[*.yml]
indent_style = space
tab_width = 2
indent_size = 2

[*.yaml]
indent_style = space
tab_width = 2
indent_size = 2

[{*/bundle/**,config/*/bundle/**,vim/bundle-*/**,tmux/frozen/*,zsh/rc/completions/generated/*}]
indent_style = unset
tab_width = unset
indent_size = unset
quote_style = unset
call_parentheses = unset
