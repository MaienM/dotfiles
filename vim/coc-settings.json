{
	"diagnostic.errorSign": "E",
	"diagnostic.warningSign": "W",
	"diagnostic.infoSign": "I",
	"diagnostic.hintSign": "H",
	"diagnostic.maxWindowHeight": 20,
	"diagnostic.maxWindowWidth": 120,
	"signature.maxWindowHeight": 20,
	"signature.preferShownAbove": false,

	"python.venvPath": "~/.asdf/installs/python",
	"npm.binPath": "~/.asdf/installs/nodejs/neovim/bin/npm",

	"html.format.enable": true,

	"diagnostic-languageserver.filetypes": {
		"sh": ["shellcheck"],
	},

	"languageserver": {
		"clojure": {
			"filetypes": ["clojure", "clojurescript"],
			"command": "~/.local/bin/clojure-lsp",
		},
		"kotlin": {
			"filetypes": ["kotlin"],
			"command": "~/.local/share/kotlin-language-server/server/build/install/server/bin/kotlin-language-server",
			"env": {
				"CLASSPATH": "/usr/share/kotlin/",
			},
			"settings": {
				"kotlin": {
					"compiler": {
						"jvm": {
							"target": "1.8",
						},
					},
				},
			},
		},
		"neuron": {
			"filetypes": ["markdown"],
			"command": "~/go/bin/neuron-language-server",
		},
	},
}
