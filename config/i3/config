set $Alt Mod1
set $GUI Mod4
set $Meh Control+Shift+Mod1
set $Hyper Control+Shift+Mod1+Mod4

# Movement with vim bindings
set $left h
set $up j
set $down k
set $right l

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Fira Code 12

# Use Mouse+$GUI to drag floating windows to their wanted position
floating_modifier $GUI

# start a terminal
bindsym $GUI+Return exec i3-sensible-terminal

# kill focused window
bindsym $GUI+Shift+q kill

# change focus
bindsym $GUI+$left focus left
bindsym $GUI+$up focus down
bindsym $GUI+$down focus up
bindsym $GUI+$right focus right

# move focused window
bindsym $GUI+Shift+$left move left
bindsym $GUI+Shift+$up move down
bindsym $GUI+Shift+$down move up
bindsym $GUI+Shift+$right move right

# split with keybindings similar to tmux
bindsym $GUI+Shift+quotedbl split v
bindsym $GUI+Shift+bar split h

# enter fullscreen mode for the focused container
bindsym $GUI+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $GUI+s layout stacking
bindsym $GUI+w layout tabbed
bindsym $GUI+e layout toggle split

# toggle tiling / floating
bindsym $GUI+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $GUI+space focus mode_toggle

# focus the parent container
bindsym $GUI+p focus parent

# focus the child container
#bindsym $GUI+d focus child

