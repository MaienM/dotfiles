	name = Michon van Dooren
[core]
	excludesfile = ~/.gitignoreglobal
[color]
	diff = auto
	branch = auto
[push]
	default = simple
[alias]
	obliterate = filter-branch -f --index-filter "git rm -r --cached '$file' --ignore-unmatch" --prune-empty --tag-name-filter cat -- --all
	submodule-init = submodule update --recursive --init
	submodule-update = submodule update --recursive --remote
	submodule-reset = submodule update --recursive --remote --force --checkout
