# reload the configuration file
bindsym $mod+Shift+c reload; exec "notify-send 'i3' 'Reloaded config'"
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# "hidden" layer of workspaces. these are nameless, and always linked to the workspace they are a "layer" of.
bindsym $mod+a exec notify-error ~/.config/i3/run-for-layer.sh "~/.config/i3/move-workspace-to-current-output.sh '__target__'"
bindsym $mod+Shift+a exec notify-error ~/.config/i3/run-for-layer.sh "i3-msg 'move container to workspace __target__'"

# resize window (you can also use the mouse for that)
mode "resize" {
	# These bindings trigger as soon as you enter the resize mode

	# Pressing left will shrink the window’s width.
	# Pressing right will grow the window’s width.
	# Pressing up will shrink the window’s height.
	# Pressing down will grow the window’s height.
	bindsym $up resize grow height 2 px or 2 ppt
	bindsym $down resize shrink height 2 px or 2 ppt
	bindsym $left resize shrink width 2 px or 2 ppt
	bindsym $right resize grow width 2 px or 2 ppt
	bindsym Mod1+$up resize grow height 10 px or 10 ppt
	bindsym Mod1+$down resize shrink height 10 px or 10 ppt
	bindsym Mod1+$left resize shrink width 10 px or 10 ppt
	bindsym Mod1+$right resize grow width 10 px or 10 ppt

	# Set height to a be a common ratio between width and height
	bindsym 4 exec notify-error ~/.config/i3/resize-to-aspect-ratio.sh 4:3 height
	bindsym 5 exec notify-error ~/.config/i3/resize-to-aspect-ratio.sh 5:4 height
	bindsym 9 exec notify-error ~/.config/i3/resize-to-aspect-ratio.sh 16:9 height
	bindsym 0 exec notify-error ~/.config/i3/resize-to-aspect-ratio.sh 16:10 height
	bindsym Mod1+4 exec notify-error ~/.config/i3/resize-to-aspect-ratio.sh 4:3 width
	bindsym Mod1+5 exec notify-error ~/.config/i3/resize-to-aspect-ratio.sh 5:4 width
	bindsym Mod1+9 exec notify-error ~/.config/i3/resize-to-aspect-ratio.sh 16:9 width
	bindsym Mod1+0 exec notify-error ~/.config/i3/resize-to-aspect-ratio.sh 16:10 width

	# A menu for less common ratios/presets
	bindsym Tab exec notify-error ~/.config/i3/resize-menu.sh height
	bindsym Mod1+Tab exec notify-error ~/.config/i3/resize-menu.sh width

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Look & feel of windows
new_window 1pixel
gaps inner 04
smart_borders on
smart_gaps on
floating_minimum_size 75 x 50

# Keybinds to run programs
bindsym $mod+Escape exec --no-startup-id xscreensaver-command -lock
