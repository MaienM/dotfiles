# resize window (you can also use the mouse for that)
mode "resize" {
	# These bindings trigger as soon as you enter the resize mode

	# Pressing left will shrink the window’s width.
	# Pressing right will grow the window’s width.
	# Pressing up will shrink the window’s height.
	# Pressing down will grow the window’s height.
	bindsym $up resize grow height 2 px or 2 ppt
	bindsym $down resize shrink height 2 px or 2 ppt
	bindsym $left resize shrink width 2 px or 2 ppt
	bindsym $right resize grow width 2 px or 2 ppt
	bindsym $Alt+$up resize grow height 10 px or 10 ppt
	bindsym $Alt+$down resize shrink height 10 px or 10 ppt
	bindsym $Alt+$left resize shrink width 10 px or 10 ppt
	bindsym $Alt+$right resize grow width 10 px or 10 ppt

	# Set height to a be a common ratio between width and height
	bindsym 4 $exec ~/.config/i3/resize-to-aspect-ratio.sh 4:3 height
	bindsym 5 $exec ~/.config/i3/resize-to-aspect-ratio.sh 5:4 height
	bindsym 9 $exec ~/.config/i3/resize-to-aspect-ratio.sh 16:9 height
	bindsym 0 $exec ~/.config/i3/resize-to-aspect-ratio.sh 16:10 height
	bindsym $Alt+4 $exec ~/.config/i3/resize-to-aspect-ratio.sh 4:3 width
	bindsym $Alt+5 $exec ~/.config/i3/resize-to-aspect-ratio.sh 5:4 width
	bindsym $Alt+9 $exec ~/.config/i3/resize-to-aspect-ratio.sh 16:9 width
	bindsym $Alt+0 $exec ~/.config/i3/resize-to-aspect-ratio.sh 16:10 width

	# A menu for less common ratios/presets
	bindsym Tab $exec ~/.config/i3/resize-menu.sh height
	bindsym $Alt+Tab $exec ~/.config/i3/resize-menu.sh width

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $GUI+s mode "resize"

