#!/usr/bin/env bash

# A wrapper around rofi -dmenu that allows each entry to separate what is shown from what will be returned upon a selection.

set -o errexit -o pipefail

sed 's!^\([^|]*\)|\(.*\)$!<span size="1">\1</span>\2!' \
| rofi -dmenu -markup-rows "$@" \
| sed 's/^<span size=.1.>\([^<]*\)<.*$/\1/'
