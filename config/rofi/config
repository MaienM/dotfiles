! Scale properly
rofi.font: InconsolataGo 16

! Fuzzy matching, because this makes narrowing down much easier
rofi.matching: fuzzy
rofi.sort: true
rofi.sorting-method: fzf

! Don't search the executable
rofi.drun-match-fields: name,generic,categories

! Don't show the prefix by default in combi mode
rofi.combi-hide-mode-prefix: true
