# Media bindings. Designed to be used with a dedicated launchpad (see qmk repo)
bindsym $Meh+XF86AudioLowerVolume exec --no-startup-id notify-error mpv-control playlist-prev
bindsym $Meh+XF86AudioRaiseVolume exec --no-startup-id notify-error mpv-control playlist-next
bindsym $Meh+XF86AudioPrev exec --no-startup-id notify-error mpv-control seek -10
bindsym $Meh+XF86AudioNext exec --no-startup-id notify-error mpv-control seek 10
bindsym $Meh+XF86AudioPause exec --no-startup-id notify-error mpv-control cycle pause
bindsym $Hyper+XF86AudioLowerVolume exec --no-startup-id notify-error mpv-control add chapter -1
bindsym $Hyper+XF86AudioRaiseVolume exec --no-startup-id notify-error mpv-control add chapter 1
bindsym $Hyper+XF86AudioPrev exec --no-startup-id notify-error mpv-control seek -30
bindsym $Hyper+XF86AudioNext exec --no-startup-id notify-error mpv-control seek 30
bindsym $Hyper+XF86AudioPause exec --no-startup-id notify-error mpv-control cycle pause

